{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Java: Debug runner (single problem)",
      "request": "launch",
      "mainClass": "Main",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build-java",
      "env": {
        "REPO_ROOT": "${workspaceFolder}",
        "LC_PROB_NUM": "${input:lcProbNum}"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Go: Debug runner (single problem)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/build/go/runner",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "LC_LANG": "go",
        "LC_PROB_NUM": "${input:lcProbNum}"
      }
    },
    {
      "name": "C++: Debug runner (single problem)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/cpp/runner.dbg",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "LC_LANG", "value": "cpp" },
        { "name": "LC_PROB_NUM", "value": "${input:lcProbNum}" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "lcProbNum",
      "type": "promptString",
      "description": "LeetCode problem number to debug",
      "default": "104"
    }
  ]
}