{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-java",
            "type": "shell",
            "command": "make",
            "args": ["-C", "${workspaceFolder}/src/java", "all"],
            "group": { "kind": "build" },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": { "cwd": "${fileDirname}" },
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true },
            "detail": "Task generated by Debugger."
        }
    ]
}